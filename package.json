{
  "name": "huddle_lp",
  "version": "1.0.0",
  "description": "![Design preview for the Huddle landing page with alternating feature blocks coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o css scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "serve": "browser-sync start --server --files 'css/*.css, js/*.js'",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange 'scss/*.scss' 'scss/*/*.scss' -- npm run build:css",
    "run": "npm-run-parallel watch:css serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matejkubicek/Huddle-LP.git"
  },
  "author": "MK",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matejkubicek/Huddle-LP/issues"
  },
  "homepage": "https://github.com/matejkubicek/Huddle-LP#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "browser-sync": "^2.26.7",
    "node-sass": "^4.13.1",
    "npm-run-parallel": "^0.6.0",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  }
}
